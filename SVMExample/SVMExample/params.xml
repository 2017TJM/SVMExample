<!--featureType choices: LBP/HOG/SIFT/SURF/ORB/BRISK/KAZE/AKAZE-->
<featureType>LBP</featureType>

<ddmParams><!--parameters of bag of words-->
   <detectorType>SIFT</detectorType>
   <descriptorType>SIFT</descriptorType>
